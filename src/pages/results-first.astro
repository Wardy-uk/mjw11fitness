---
import BaseLayout from "../layouts/BaseLayout.astro";
import content from "../data/site-content.json";

const page = content.resultsFirst;
const results = content.results;
---

<BaseLayout title={`${content.site.name} | Results First`} description={page.intro}>
  <div class="container page-grid">
    <section class="card">
      <p class="kicker">{page.kicker}</p>
      <h1>{page.headline}</h1>
      <p class="page-intro">{page.intro}</p>
      <div class="hero-actions">
        <a class="button" href="/contact/">Apply For Coaching</a>
        <a class="button ghost" href={content.site.instagramUrl} target="_blank" rel="noopener noreferrer">Message On Instagram</a>
      </div>
    </section>

    <section class="split">
      <article class="card">
        <h2>Transformation Examples</h2>
        <div class="grid-2">
          {results.images.map((image, index) => (
            <img src={image} alt={`Client result image ${index + 1}`} />
          ))}
        </div>
      </article>
      <aside class="card">
        <h2>Testimonials</h2>
        <div class="quote-list">
          {results.testimonials.map((quote) => (
            <blockquote>"{quote}"</blockquote>
          ))}
        </div>
      </aside>
    </section>

    <section class="card">
      <h2>{page.howItWorksTitle}</h2>
      <div class="grid-3">
        {page.howItWorksCards.map((card) => (
          <article class="tile">
            <img src={card.image} alt={card.title} />
            <div class="tile-body">
              <h3>{card.title}</h3>
              <p>{card.description}</p>
            </div>
          </article>
        ))}
      </div>
    </section>
  </div>
</BaseLayout>
