---
import BaseLayout from "../layouts/BaseLayout.astro";
import content from "../data/site-content.json";

const contact = content.contact;
---

<BaseLayout title={`${content.site.name} | Contact`} description={contact.intro}>
  <div class="container page-grid">
    <section class="card">
      <p class="kicker">{contact.kicker}</p>
      <h1>{contact.headline}</h1>
      <p class="page-intro">{contact.intro}</p>
      <div class="hero-actions">
        <a class="button" href={content.site.instagramUrl} target="_blank" rel="noopener noreferrer">Message On Instagram</a>
      </div>
    </section>

    <section class="card">
      <form name={contact.formName} method="POST" data-netlify="true" netlify-honeypot="bot-field" class="contact-form">
        <input type="hidden" name="form-name" value={contact.formName} />
        <p hidden>
          <label>
            Ignore this field: <input name="bot-field" />
          </label>
        </p>
        <label>
          Name
          <input type="text" name="name" required />
        </label>
        <label>
          Email
          <input type="email" name="email" required />
        </label>
        <label>
          Primary Goal
          <select name="goal" required>
            <option value="">Select one</option>
            <option value="fat-loss">Fat Loss</option>
            <option value="strength-muscle">Strength & Muscle</option>
            <option value="accountability">Accountability</option>
          </select>
        </label>
        <label>
          Message
          <textarea name="message" rows="6" required></textarea>
        </label>
        <button type="submit">{contact.submitLabel}</button>
      </form>
    </section>
  </div>
</BaseLayout>
