---
import BaseLayout from "../layouts/BaseLayout.astro";
import content from "../data/site-content.json";

const home = content.homeCoachFirst;
const programs = content.programs;
---

<BaseLayout title={`${content.site.name} | Home`} description={home.intro}>
  <div class="container page-grid">
    <section class="hero">
      <div>
        <p class="kicker">{home.kicker}</p>
        <h1>{home.headline}</h1>
        <p>{home.intro}</p>
        <div class="hero-actions">
          <a class="button" href="/contact/">Apply For Coaching</a>
          <a class="button ghost" href={content.site.instagramUrl} target="_blank" rel="noopener noreferrer">Message On Instagram</a>
        </div>
        <div class="metrics">
          {home.metrics.map((metric) => (
            <div><strong>{metric.value}</strong><span>{metric.label}</span></div>
          ))}
        </div>
      </div>
      <img src={home.heroImage} alt="Matt Ward coaching hero" />
    </section>

    <section class="card about-panel">
      <div>
        <p class="kicker">{home.aboutKicker}</p>
        <h2>{home.aboutHeadline}</h2>
        <p class="page-intro">{home.aboutText}</p>
        <a class="button" href="/about/">Read The Coaching Approach</a>
      </div>
      <img src={home.aboutImage} alt="Coach about" />
    </section>

    <section class="card">
      <h2>{home.whatYouGetTitle}</h2>
      <p class="page-intro">{home.whatYouGetIntro}</p>
      <div class="grid-3">
        {programs.items.map((item) => (
          <article class="tile">
            <img src={item.image} alt={item.title} />
            <div class="tile-body">
              <h3>{item.title}</h3>
              <p>{item.description}</p>
            </div>
          </article>
        ))}
      </div>
    </section>

    <section class="card">
      <h2>Prefer A Results-First Page?</h2>
      <p class="page-intro">For A/B testing, use the alternate landing page focused on transformations and testimonials.</p>
      <a class="button" href="/results-first/">Open Results-First Version</a>
    </section>
  </div>
</BaseLayout>
