---
import BaseLayout from "../layouts/BaseLayout.astro";
import content from "../data/site-content.json";

const results = content.results;
---

<BaseLayout title={`${content.site.name} | Results`} description={results.intro}>
  <div class="container page-grid">
    <section class="split">
      <article class="card">
        <p class="kicker">{results.kicker}</p>
        <h1>{results.headline}</h1>
        <p class="page-intro">{results.intro}</p>
        <div class="grid-2">
          {results.images.map((image, index) => (
            <img src={image} alt={`Client result image ${index + 1}`} />
          ))}
        </div>
      </article>
      <aside class="card">
        <h2>Testimonials</h2>
        <div class="quote-list">
          {results.testimonials.map((quote) => (
            <blockquote>"{quote}"</blockquote>
          ))}
        </div>
      </aside>
    </section>
  </div>
</BaseLayout>
