---
import BaseLayout from "../layouts/BaseLayout.astro";
import content from "../data/site-content.json";

const about = content.about;
---

<BaseLayout title={`${content.site.name} | About`} description={about.paragraphs[0]}>
  <div class="container page-grid">
    <section class="card about-panel">
      <div>
        <p class="kicker">{about.kicker}</p>
        <h1>{about.headline}</h1>
        {about.paragraphs.map((paragraph) => (
          <p class="page-intro">{paragraph}</p>
        ))}
        <a class="button" href={content.site.instagramUrl} target="_blank" rel="noopener noreferrer">Message On Instagram</a>
      </div>
      <img src={about.image} alt="Coach portrait" />
    </section>
  </div>
</BaseLayout>
